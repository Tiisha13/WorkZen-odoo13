            "name": "Authentication",
            "item": [
                {
                    "name": "Login as Admin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.token) {",
                                    "        pm.collectionVariables.set('admin_token', jsonData.data.token);",
                                    "        console.log('Admin token saved');",
                                    "    }",
                                    "    if (jsonData.data && jsonData.data.user) {",
                                    "        pm.collectionVariables.set('user_id', jsonData.data.user.id);",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin@workzen.com\",\n  \"password\": \"Admin@123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
