                            "query": [
                                {
                                    "key": "date",
                                    "value": "2025-11-08"
                                }
                            ]
                        },
                        "description": "Get attendance statistics"
                    },
                    "response": []
                },
                {
                    "name": "Filter by Employee",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/attendance?employee_id={{employee_id}}&page=1&limit=10",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "attendance"
                            ],
                            "query": [
                                {
                                    "key": "employee_id",
