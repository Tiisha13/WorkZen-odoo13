            ]
        },
        {
            "name": "Leave Management",
            "item": [
                {
                    "name": "List All Leaves",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.leaves && jsonData.data.leaves.length > 0) {",
                                    "        pm.collectionVariables.set('leave_id', jsonData.data.leaves[0].id);",
                                    "    }",
                                    "}"
