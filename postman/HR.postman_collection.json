{
    "info": {
        "_postman_id": "workzen-hr-collection",
        "name": "WorkZen - HR",
        "description": "HR role testing - Attendance monitoring, leave management, and employee records",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{hr_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000/api/v1",
            "type": "string"
        },
        {
            "key": "hr_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "employee_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "leave_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login as HR",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.token) {",
                                    "        pm.collectionVariables.set('hr_token', jsonData.data.token);",
                                    "        console.log('HR token saved');",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"hr@workzen.com\",\n  \"password\": \"TempPassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with HR credentials"
                    },
                    "response": []
                },
                {
                    "name": "Get My Profile",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"old_password\": \"TempPassword123\",\n  \"new_password\": \"NewHRPass123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/change-password",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "change-password"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Employee Records",
            "item": [
                {
                    "name": "List All Users",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.users && jsonData.data.users.length > 0) {",
                                    "        var employee = jsonData.data.users.find(u => u.role === 'employee');",
                                    "        if (employee) {",
                                    "            pm.collectionVariables.set('employee_id', employee.id);",
                                    "        }",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users?page=1&limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        },
                        "description": "View all employees in the company"
                    },
                    "response": []
                },
                {
                    "name": "Get Employee Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users/{{employee_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                "{{employee_id}}"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Attendance Management",
            "item": [
                {
                    "name": "List All Attendance",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/attendance?page=1&limit=20&date=2025-11-08",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "attendance"
                            ],
                            "query": [
