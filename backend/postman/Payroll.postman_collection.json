{
    "info": {
        "_postman_id": "workzen-payroll-collection",
        "name": "WorkZen - Payroll",
        "description": "Payroll role testing - Salary structures, payroll processing, and payment management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{payroll_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000/api/v1",
            "type": "string"
        },
        {
            "key": "payroll_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "employee_id",
            "value": "",
            "type": "string"
        },
        {
            "key": "payroll_id",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Login as Payroll",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.token) {",
                                    "        pm.collectionVariables.set('payroll_token', jsonData.data.token);",
                                    "        console.log('Payroll token saved');",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"payroll@workzen.com\",\n  \"password\": \"TempPassword123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        },
                        "description": "Login with Payroll credentials"
                    },
                    "response": []
                },
                {
                    "name": "Get My Profile",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/auth/me",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "me"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Change Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"old_password\": \"TempPassword123\",\n  \"new_password\": \"NewPayrollPass123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/change-password",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "change-password"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Employee Records",
            "item": [
                {
                    "name": "List All Users",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    var jsonData = pm.response.json();",
                                    "    if (jsonData.data && jsonData.data.users && jsonData.data.users.length > 0) {",
                                    "        var employee = jsonData.data.users.find(u => u.role === 'employee');",
                                    "        if (employee) {",
                                    "            pm.collectionVariables.set('employee_id', employee.id);",
                                    "        }",
                                    "    }",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users?page=1&limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        },
                        "description": "View all employees"
                    },
                    "response": []
                },
                {
                    "name": "Get Employee Details",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/users/{{employee_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                "{{employee_id}}"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Update Bank Details",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"account_number\": \"1234567890\",\n  \"ifsc_code\": \"HDFC0001234\",\n  \"bank_name\": \"HDFC Bank\",\n  \"pan_no\": \"ABCDE1234F\",\n  \"uan_no\": \"123456789012\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/users/{{employee_id}}/bank",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                "{{employee_id}}",
                                "bank"
                            ]
                        },
                        "description": "Update employee bank details for payroll"
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Salary Management",
